<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:gravity="center"
    android:orientation="vertical">

    <bunny.project.aromacafecashier.view.NumberEditText
        android:id="@+id/password_view"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_big" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/one"
                style="@style/NumberStyle"
                android:text="1" />

            <TextView
                android:id="@+id/two"
                style="@style/NumberStyle"
                android:text="2" />

            <TextView
                android:id="@+id/three"
                style="@style/NumberStyle"
                android:text="3" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/four"
                style="@style/NumberStyle"
                android:text="4" />

            <TextView
                android:id="@+id/five"
                style="@style/NumberStyle"
                android:text="5" />

            <TextView
                android:id="@+id/six"
                style="@style/NumberStyle"
                android:text="6" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/seven"
                style="@style/NumberStyle"
                android:text="7" />

            <TextView
                android:id="@+id/eight"
                style="@style/NumberStyle"
                android:text="8" />

            <TextView
                android:id="@+id/nine"
                style="@style/NumberStyle"
                android:text="9" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/dot"
                style="@style/NumberStyle"
                android:text="."
                android:visibility="invisible" />

            <TextView
                android:id="@+id/zero"
                style="@style/NumberStyle"
                android:text="0" />

            <TextView
                android:id="@+id/del"
                style="@style/NumberStyle"
                android:background="@drawable/number_delete_bg"
                android:text="&lt;-" />
            <!--<TextView-->
            <!--android:id="@+id/btn_confirm"-->
            <!--style="@style/NumberStyle"-->
            <!--android:background="@drawable/number_delete_bg"-->
            <!--android:text="@string/comfirm" />-->
            <!--<ImageView
                android:id="@+id/del"
                android:layout_width="@dimen/number_width"
                android:layout_height="@dimen/number_height"
                android:src="@drawable/delete" />-->

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="@string/comfirm" />
</LinearLayout>