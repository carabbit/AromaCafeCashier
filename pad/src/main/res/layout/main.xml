<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="horizontal">

    <!--<FrameLayout-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1">-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragment_container_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="@dimen/main_tab_width"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/tabGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/tab_order"
                style="@style/MainTabStyle"
                android:checked="true"

                android:text="@string/tab_order" />

            <RadioButton
                android:id="@+id/tab_order_history"
                style="@style/MainTabStyle"
                android:text="@string/tab_order_history" />

            <RadioButton
                android:id="@+id/tab_product_manager"
                style="@style/MainTabStyle"
                android:text="@string/tab_product_manager" />
        </RadioGroup>

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end" />
    </RelativeLayout>
</LinearLayout>