<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_translucent_bg"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/number_pad_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_cash_single"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/total_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:minWidth="200px"
                        android:text="0"
                        android:textSize="@dimen/text_size_big" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charge"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:minWidth="200px"
                        android:text="0"
                        android:textSize="@dimen/text_size_big" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_size"
                android:layout_height="match_parent"
                android:layout_marginEnd="15px"
                android:layout_marginStart="15px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_in"
                        android:textSize="@dimen/text_size_big" />

                    <bunny.project.aromacafecashier.view.NumberEditText
                        android:id="@+id/pay_in"
                        android:layout_width="280px"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_big" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow>

                            <TextView
                                android:id="@+id/one"
                                style="@style/NumberStyle"
                                android:text="1" />

                            <TextView
                                android:id="@+id/two"
                                style="@style/NumberStyle"
                                android:text="2" />

                            <TextView
                                android:id="@+id/three"
                                style="@style/NumberStyle"
                                android:text="3" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/four"
                                style="@style/NumberStyle"
                                android:text="4" />

                            <TextView
                                android:id="@+id/five"
                                style="@style/NumberStyle"
                                android:text="5" />

                            <TextView
                                android:id="@+id/six"
                                style="@style/NumberStyle"
                                android:text="6" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/seven"
                                style="@style/NumberStyle"
                                android:text="7" />

                            <TextView
                                android:id="@+id/eight"
                                style="@style/NumberStyle"
                                android:text="8" />

                            <TextView
                                android:id="@+id/nine"
                                style="@style/NumberStyle"
                                android:text="9" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/dot"
                                style="@style/NumberStyle"
                                android:text="."
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/zero"
                                style="@style/NumberStyle"
                                android:text="0" />

                            <TextView
                                android:id="@+id/del"
                                style="@style/NumberStyle"
                                android:background="@drawable/number_delete_bg"
                                android:text="&lt;-" />
                            <!--<ImageView
                                android:id="@+id/del"
                                android:layout_width="@dimen/number_width"
                                android:layout_height="@dimen/number_height"
                                android:src="@drawable/delete" />-->

                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/cost_off_nine"
                    style="@style/MyRatioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_off_nine" />

                <RadioButton
                    android:id="@+id/cost_off_eight"
                    style="@style/MyRatioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_off_eight" />

                <RadioButton
                    android:id="@+id/cost_off_seven"
                    style="@style/MyRatioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_off_seven" />

                <RadioButton
                    android:id="@+id/cost_off_six"
                    style="@style/MyRatioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_off_six" />

                <RadioButton
                    android:id="@+id/cost_off_five"
                    style="@style/MyRatioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_off_five" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_temp_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15px"
                android:layout_marginStart="15px"
                android:text="@string/temp_order" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/pay_finish" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>