<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/section_bg"
    android:orientation="vertical"
    android:padding="@dimen/button_bg_stroke">

    <!--<HorizontalScrollView-->
    <!--android:id="@+id/tabContainerContainer"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:visibility="gone">-->

    <!--<LinearLayout-->
    <!--android:id="@+id/tabContainer"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="horizontal"></LinearLayout>-->
    <bunny.project.aromacafecashier.view.TabGroup
        android:id="@+id/tabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" />

    <!--</HorizontalScrollView>-->

    <GridView
        android:id="@+id/product_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnWidth="@dimen/product_list_item_width"
        android:horizontalSpacing="@dimen/product_list_item_horizontalSpacing"
        android:numColumns="auto_fit"
        android:padding="20px"
        android:stretchMode="none"
        android:verticalSpacing="@dimen/product_list_item_verticalSpacing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_product"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>
